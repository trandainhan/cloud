<% content_for :title, "Admin - Virtual Machine Type" %>
<div>
	<h3>Virtual Machine Type</h3>
	<table class = 'table table-striped'>
		<tr>
			<th>Name</th>
			<th>CPU</th>
			<th>Ram</th>
			<th>Ratio</th>
			<th>Price</th>
			<th>Action</th>
		</tr>
		<% @vms.each do |vm| %>
			<tr>
				<td><%= vm.name %></td>
				<td><%= vm.cpus %></td>
				<td><%= vm.ram %></td>
				<td><%= vm.ratio %></td>
				<td><%= vm.price %></td>
				<td>
					<button class="btn btn-mini btn-info">Edit</button>
					<%= button_to "Delete", "/admin/delete_vms/#{vm.id}", method: :delete,
                                     data: { confirm: "You sure?" }, :class => "btn btn-mini btn-danger" %>
				</td>
			</tr>
		<% end %>

	</table>
</div>

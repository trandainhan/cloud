<% content_for :title, "Admin - All Users" %>
<div>
	<h3>All Users</h3>
	<table class = 'table table-striped'>
		<tr>
			<th>Name</th>
			<th>Activated</th>
			<th>Role</th>
			<th>Action</th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.activated %></td>
				<td><%= user.role %></td>
				<td>
					<button class="btn btn-mini btn-info">Edit</button>
					<%= button_to "Delete", "/admin/delete_user/#{user.id}", method: :delete,
                                     data: { confirm: "You sure?" }, :class => "btn btn-mini btn-danger" %>
				</td>
			</tr>
		<% end %>

	</table>
</div>

<div>
	<h3>All Users</h3>
	<table class = 'table table-striped'>
		<tr>
			<th>Name</th>
			<th>Activated</th>
			<th>Role</th>
			<th>Action</th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.activated %></td>
				<td><%= user.role %></td>
				<td>
					<button class="btn btn-mini btn-info">Edit</button>
					<button class="btn btn-mini btn-danger">Delete</button>
				</td>
			</tr>
		<% end %>

	</table>
</div>
